<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="500dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header del equipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvNombreEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Equipo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvProyectoEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proyecto: Nombre del Proyecto"
                android:textSize="14sp"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Descripción -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/info_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción del Proyecto"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/info_text"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvDescripcionEquipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción del equipo y su proyecto..."
                    android:textSize="11sp"
                    android:textColor="@color/info_text" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sección de calificación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calificación"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Rating Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/card_background"
            android:layout_marginBottom="16dp">

            <RatingBar
                android:id="@+id/ratingBarCalificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:progressTint="@color/warning"
                android:progressBackgroundTint="@color/divider_color"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvCalificacionTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona una calificación"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Criterios de evaluación -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Criterios de Evaluación"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Innovación y creatividad\n• Funcionalidad del proyecto\n• Presentación y claridad\n• Dominio del tema\n• Aplicabilidad práctica"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Comentarios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios (Opcional)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editComentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe tus comentarios sobre el proyecto..."
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nota informativa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/warning_background"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                android:layout_marginEnd="8dp"
                app:tint="@color/warning_text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="La evaluación no se puede modificar una vez enviada."
                android:textSize="11sp"
                android:textColor="@color/warning_text" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>