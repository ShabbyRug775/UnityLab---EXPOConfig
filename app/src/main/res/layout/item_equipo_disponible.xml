<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardEquipo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header del equipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreEquipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Equipo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvProyectoEquipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proyecto: Nombre del Proyecto"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Indicador de estado -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvIntegrantesEquipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 integrantes"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    android:background="@drawable/button_accent_outline"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🟢 Activo"
                    android:textSize="10sp"
                    android:textColor="@color/success"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Descripción del proyecto -->
        <TextView
            android:id="@+id/tvDescripcionEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del proyecto que desarrolla este equipo..."
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Información del líder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_class"
                android:layout_marginEnd="6dp"
                app:tint="@color/accent_color" />

            <TextView
                android:id="@+id/tvLiderEquipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Líder: Nombre del Líder"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Botón de acción -->
        <Button
            android:id="@+id/btnUnirse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Solicitar Unirse"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>