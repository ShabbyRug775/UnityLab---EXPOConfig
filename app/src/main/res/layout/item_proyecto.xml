<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con nombre del proyecto y estado -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvNombreProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tvEstado"
                android:text="Nombre del Proyecto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="ACTIVO"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/badge_estado"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </RelativeLayout>

        <!-- Información del equipo -->
        <TextView
            android:id="@+id/tvNombreEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipo: Los Desarrolladores"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp"
            android:drawableStart="@drawable/ic_group"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <!-- Información académica -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvMateria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Materia: Ingeniería de Software"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_book"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo: 3CM1"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="8dp"
                android:drawableStart="@drawable/ic_class"
                android:drawablePadding="6dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Información de personas involucradas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvProfesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profesor: Dr. Juan Pérez"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp"
                android:drawableStart="@drawable/ic_teacher"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEstudianteLider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Líder: María García"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Línea divisoria sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Footer con indicaciones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toca para ver detalles • Mantén presionado para más opciones"
            android:textSize="10sp"
            android:textColor="@color/text_hint"
            android:textStyle="italic"
            android:gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>