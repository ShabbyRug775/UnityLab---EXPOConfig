<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Unirse a Equipo" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Estado actual del alumno -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEstadoActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/info_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/info_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado de Participación"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/info_text" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMensajeEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verificando estado..."
                        android:textSize="14sp"
                        android:textColor="@color/info_text"
                        android:lineSpacingMultiplier="1.2" />

                    <TextView
                        android:id="@+id/tvEquipoActual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/info_text"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Opciones disponibles -->
            <LinearLayout
                android:id="@+id/layoutOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Título de opciones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Opciones Disponibles"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark" />

                    <Button
                        android:id="@+id/btnActualizar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actualizar"
                        android:textColor="@color/white"
                        android:background="@drawable/button_outline"
                        android:textSize="12sp"
                        android:minHeight="32dp"
                        style="?android:attr/borderlessButtonStyle" />

                </LinearLayout>

                <!-- Botones de acción principales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btnCrearEquipo"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Crear Nuevo Equipo"
                        android:textColor="@color/white"
                        android:background="@drawable/button_primary"
                        android:drawableTop="@drawable/ic_add"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnBuscarPorCodigo"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Buscar por Código"
                        android:textColor="@color/primary_color"
                        android:background="@drawable/button_outline"
                        android:drawableTop="@drawable/ic_search"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        style="?android:attr/borderlessButtonStyle" />

                </LinearLayout>

                <!-- Título de equipos disponibles -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Equipos Disponibles para Unirse"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estos equipos están buscando más integrantes:"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Lista de equipos disponibles -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerEquiposDisponibles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false" />

            <!-- Mensaje cuando no hay equipos -->
            <LinearLayout
                android:id="@+id/layoutSinEquipos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_group"
                    android:layout_marginBottom="16dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay equipos disponibles"
                    android:textSize="18sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todos los equipos están completos o no hay equipos registrados.\n¡Crea tu propio equipo!"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

            <!-- Información adicional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 Consejos para participar"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Puedes crear tu propio equipo si tienes la clave de un proyecto\n• Al unirte a un equipo, el líder debe aprobar tu solicitud\n• Solo puedes formar parte de un equipo a la vez\n• Comunícate con tu equipo para coordinar el proyecto"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingMultiplier="1.3" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>