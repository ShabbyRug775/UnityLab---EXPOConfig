<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Gestionar Evaluadores"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con informaci칩n sobre evaluadores -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游논 Evaluadores y Jurados"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gestiona los profesores y evaluadores que participar치n como jurados en las presentaciones de proyectos"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Estad칤sticas de evaluadores -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalEvaluadores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Evaluadores"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvEvaluadoresActivos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/success" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Activos"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvJuradosAsignados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asignados"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvEvaluacionesPendientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/warning" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendientes"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tabs para diferentes vistas -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:background="@android:color/white">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluadores" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asignaciones" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R칰bricas" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Vista de evaluadores -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVistaEvaluadores"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header con controles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lista de Evaluadores"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_dark" />

                        <Button
                            android:id="@+id/btnAgregarEvaluador"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="+ Agregar"
                            android:textSize="12sp"
                            android:backgroundTint="@color/primary_color"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                    <!-- Filtros -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editBuscarEvaluador"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Buscar evaluador..."
                                android:inputType="text"
                                android:drawableStart="@drawable/ic_search"
                                android:drawablePadding="12dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Spinner
                            android:id="@+id/spinnerFiltroTipo"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:minWidth="120dp"
                            android:background="@drawable/spinner_background" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Lista de evaluadores -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewEvaluadores"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Vista de asignaciones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVistaAsignaciones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/primary_light">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Asignaci칩n de Jurados"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark" />

                    <Button
                        android:id="@+id/btnAsignarAutomatico"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Auto-asignar"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <!-- Configuraci칩n de asignaci칩n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configuraci칩n de Asignaci칩n"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Evaluadores por proyecto:"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center_vertical" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editEvaluadoresPorProyecto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="3"
                                android:inputType="number"
                                android:text="3" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkBalancearCarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balancear carga de trabajo entre evaluadores"
                        android:textSize="14sp"
                        android:checked="true"
                        android:layout_marginBottom="4dp" />

                    <CheckBox
                        android:id="@+id/checkEvitarConflictos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Evitar conflictos de inter칠s (profesor-estudiante)"
                        android:textSize="14sp"
                        android:checked="true" />

                </LinearLayout>

                <!-- Matriz de asignaciones -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAsignaciones"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Vista de r칰bricas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVistaRubricas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/primary_light">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R칰bricas de Evaluaci칩n"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark" />

                    <Button
                        android:id="@+id/btnCrearRubrica"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="+ Crear R칰brica"
                        android:textSize="12sp"
                        android:backgroundTint="@color/primary_color"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>

                <!-- Informaci칩n sobre r칰bricas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/info_background">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="游늶 Sistema de Evaluaci칩n Digital"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/info_text"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crea y gestiona r칰bricas digitales para reemplazar las evaluaciones en papel. Los evaluadores podr치n calificar directamente desde la aplicaci칩n."
                        android:textSize="12sp"
                        android:textColor="@color/info_text" />

                </LinearLayout>

                <!-- Lista de r칰bricas -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRubricas"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Dialog para agregar evaluador -->
    <LinearLayout
        android:id="@+id/dialogAgregarEvaluador"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar Evaluador"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginBottom="20dp"
                    android:gravity="center" />

                <!-- Seleccionar de profesores existentes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerProfesor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seleccionar profesor"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tipo de evaluador -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerTipoEvaluador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipo de evaluador"
                        android:inputType="none"
                        android:text="Jurado General" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Especialidad -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEspecialidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Especialidad o 치rea de expertise"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Disponibilidad -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disponibilidad:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <CheckBox
                        android:id="@+id/checkLunes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lun"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkMartes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mar"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkMiercoles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mi칠"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkJueves"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jue"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkViernes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vie"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancelarDialog"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Cancelar"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btnGuardarEvaluador"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Agregar"
                        android:backgroundTint="@color/primary_color"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAccionesRapidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/accent_color" />

</LinearLayout>